# Production переменные окружения для FREESPORT Platform
# Скопируйте этот файл в .env.prod и заполните реальными значениями

# Секретный ключ Django (сгенерируйте новый: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
SECRET_KEY=your-super-secret-key-change-this-in-production

# Настройки базы данных PostgreSQL
DB_NAME=freesport
DB_USER=postgres
DB_PASSWORD=change-this-secure-password

# Настройки Redis
REDIS_PASSWORD=change-this-redis-password

# Настройки домена
ALLOWED_HOSTS=freesport.ru,www.freesport.ru,5.35.124.149,backend,nginx,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://freesport.ru,https://www.freesport.ru

# URL для frontend API
NEXT_PUBLIC_API_URL=https://freesport.ru/api/v1

# Docker образы (обновлять согласно релизным тегам в GHCR)
BACKEND_IMAGE=ghcr.io/alexmobicraft/freesport/backend:latest
FRONTEND_IMAGE=ghcr.io/alexmobicraft/freesport/frontend:latest

# Настройки электронной почты
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@freesport.ru

# Настройки 1С интеграции (если необходимо)
ONEC_API_URL=http://1c-server/your-api-path
ONEC_USERNAME=1c-user
ONEC_PASSWORD=1c-password

# Настройки файлового хранилища (опционально, для S3)
USE_S3=False
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=your-region

# Настройки мониторинга (опционально)
SENTRY_DSN=your-sentry-dsn

BACKEND_IMAGE=ghcr.io/alexmobicraft/freesport/backend:v20251102-1542
FRONTEND_IMAGE=ghcr.io/alexmobicraft/freesport/frontend:v20251102-1542