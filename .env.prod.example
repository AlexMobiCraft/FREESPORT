# Production переменные окружения для FREESPORT Platform
# Скопируйте этот файл в .env.prod и заполните реальными значениями

# Секретный ключ Django (сгенерируйте новый: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
SECRET_KEY=your-super-secret-key-change-this-in-production

# Настройки базы данных PostgreSQL
DB_NAME=freesport
DB_USER=postgres
DB_PASSWORD=change-this-secure-password

# Настройки Redis
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@redis:6379/0

# ============================================================================
# Настройки Email (SMTP) - Story 29.3
# ============================================================================
# Для Yandex Mail (рекомендуется для freesport.ru):
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=noreply@freesport.ru
EMAIL_HOST_PASSWORD=your-yandex-app-password
DEFAULT_FROM_EMAIL=FREESPORT <noreply@freesport.ru>
SERVER_EMAIL=noreply@freesport.ru

# Список email администраторов (через запятую)
# Получат уведомления о B2B заявках и ошибках сервера
ADMIN_EMAILS=admin@freesport.ru

# Для Gmail (альтернатива):
# EMAIL_HOST=smtp.gmail.com
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-16-digit-app-password
# (Создать App Password: https://support.google.com/accounts/answer/185833)

# Настройки 1С интеграции (если необходимо)
ONEC_API_URL=http://1c-server/your-api-path
ONEC_USERNAME=1c-user
ONEC_PASSWORD=1c-password

# Настройки файлового хранилища (опционально, для S3)
USE_S3=False
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=your-region

# Настройки мониторинга (опционально)
SENTRY_DSN=your-sentry-dsn

BACKEND_IMAGE=ghcr.io/alexmobicraft/freesport/backend:v20251102-1542
FRONTEND_IMAGE=ghcr.io/alexmobicraft/freesport/frontend:v20251102-1542