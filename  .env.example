# === ОБЩИЕ НАСТРОЙКИ (DEVELOPMENT) ===
DJANGO_ENVIRONMENT=development
SECRET_KEY=django-insecure-dev-key-change-this-in-production-12345
DEBUG=True

# === НАСТРОЙКИ БАЗЫ ДАННЫХ ===
# Для Docker используйте DB_HOST=db, для локального запуска DB_HOST=localhost
DB_NAME=freesport
DB_USER=postgres
DB_PASSWORD=password123
DB_HOST=db
DB_PORT=5432
DB_SSLMODE=prefer

# === REDIS & CELERY ===
REDIS_PASSWORD=password123
REDIS_URL=redis://:password123@redis:6379/0
CELERY_BROKER_URL=redis://:password123@redis:6379/0

# === НАСТРОЙКИ ДОМЕНОВ ===
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=http://localhost:3000

# === НАСТРОЙКИ EMAIL (DEVELOPMENT) ===
# Для тестирования с Mailhog (http://localhost:8025):
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False

# Для Gmail (пример настройки):
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

DEFAULT_FROM_EMAIL=noreply@freesport.ru
SERVER_EMAIL=noreply@freesport.ru
ADMIN_EMAILS=admin@freesport.ru

# === НАСТРОЙКИ СИНХРОНИЗАЦИИ ===
SYNC_LOG_RETENTION_DAYS=90
SYNC_REPORT_SCHEDULE=0 9 * * *
SYNC_LOG_BATCH_SIZE=1000

# === URL И ТЕМЫ ===
SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8001/api/v1
ACTIVE_THEME=blue

# === ИНТЕГРАЦИЯ С 1С ===
ONEC_DATA_DIR=/app/data/import_1c
